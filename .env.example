NODE_ENV=development
PORT=8888
APP_NAME=service-a
HOSTNAME=local

#Grafana Loki Integration
LOKI_HOST=http://127.0.0.1:3100
LOKI_PORT=3100
LOG_LEVEL=info

JWT_SECRET=CHANGE_ME_TO_A_SECURE_32_CHAR_SECRET
JWT_EXPIRES_IN=24h

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Trust Proxy Security Configuration
# Options: false, true, loopback, linklocal, uniquelocal, or number (hop count)
# For production, use specific IPs or subnets in TRUSTED_PROXY_IPS
TRUST_PROXY=false
TRUSTED_PROXY_IPS=

ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CACHE_TTL_SECONDS=3600

# Databae Connection
DATABASE_URL="mysql://username:password@localhost:3307/boiler_express"
DB_POOL_MAX=10
DB_POOL_TIMEOUT=20000


# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=service-a

# RabbitMQ Configuration
RABBITMQ_URL=amqp://username:password@localhost:5672
RABBITMQ_EXCHANGE=
RABBITMQ_QUEUE_PREFIX=