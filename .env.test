# Test Environment Configuration
NODE_ENV=test
PORT=8889

# Test Database
DATABASE_URL="mysql://username:password@localhost:3307/boiler_express_test"

# JWT Configuration for tests
JWT_SECRET=test-jwt-secret-32-chars-minimum
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=error
APP_NAME=service-a-test
HOSTNAME=test

# Rate Limiting (relaxed for tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Trust Proxy Security Configuration (disabled for tests)
TRUST_PROXY=false
TRUSTED_PROXY_IPS=

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Cache (Redis) - Optional for tests
REDIS_URL=
REDIS_KEY_PREFIX=service-a-test

# Cache TTL
CACHE_TTL_SECONDS=300

# Database Pool (smaller for tests)
DB_POOL_MAX=5
DB_POOL_TIMEOUT=10000

# Loki (disable for tests)
LOKI_HOST=
LOKI_PORT=