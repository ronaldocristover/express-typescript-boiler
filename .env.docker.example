# Docker Environment Configuration Template
# Copy this to .env.docker and set secure values
# This file contains environment variables for Docker deployment

# Application Configuration
PORT=8888
NODE_ENV=production
APP_NAME=express-app
HOSTNAME=docker
LOG_LEVEL=info

# Security - CHANGE THESE VALUES!
JWT_SECRET=CHANGE_ME_TO_A_SECURE_32_CHAR_SECRET_KEY_FOR_PRODUCTION
MYSQL_ROOT_PASSWORD=CHANGE_ME_TO_SECURE_ROOT_PASSWORD
MYSQL_PASSWORD=CHANGE_ME_TO_SECURE_APP_PASSWORD
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=CHANGE_ME_TO_SECURE_RABBITMQ_PASSWORD

# Database Configuration (using environment variables)
DATABASE_URL="mysql://root:${MYSQL_ROOT_PASSWORD}@mysql:3306/boiler_express"

# Cache Configuration
REDIS_URL=redis://redis:6379
REDIS_KEY_PREFIX=express-app
CACHE_TTL_SECONDS=3600

# Message Queue Configuration (using environment variables)
RABBITMQ_URL=amqp://${RABBITMQ_DEFAULT_USER}:${RABBITMQ_DEFAULT_PASS}@rabbitmq:5672
RABBITMQ_EXCHANGE=app_exchange
RABBITMQ_QUEUE_PREFIX=app_queue

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Trust Proxy Security Configuration
# For Docker behind reverse proxy, use 'linklocal' or specific proxy IPs
# Examples:
# - For Nginx/Apache reverse proxy: TRUST_PROXY=loopback
# - For Docker Swarm/Kubernetes: TRUST_PROXY=linklocal
# - For Cloudflare: Set TRUSTED_PROXY_IPS to Cloudflare IP ranges
TRUST_PROXY=linklocal
TRUSTED_PROXY_IPS=

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8888

# Database Pool
DB_POOL_MAX=10
DB_POOL_TIMEOUT=20000

# JWT Configuration
JWT_EXPIRES_IN=24h